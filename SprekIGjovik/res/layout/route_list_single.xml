<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pole_list_single"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/routelist_row">
    
	<CheckBox
		android:id="@+id/select_route_check"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/route_list_item_is_tracking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone"
        android:text="@string/tracking_in_progress" />
	
    <TextView
        style="@style/polelist_text"
        android:id="@+id/route_list_item_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
        android:layout_below="@+id/route_list_item_is_tracking"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        style="@style/polelist_text"
        android:id="@+id/route_list_item_timeago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/route_list_item_datetime"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <TextView
        style="@style/polelist_text"
        android:id="@+id/route_list_item_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/route_list_item_timeago"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>