<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pole_list_single"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        style="@style/polelist_text"
        android:id="@+id/pole_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        style="@style/polelist_text"
        android:id="@+id/pole_list_item_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/pole_list_item_title"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <TextView
        style="@style/polelist_text"
        android:id="@+id/pole_list_item_eta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/pole_list_item_distance"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
